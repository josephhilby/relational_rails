<a href="/">Home</a><br>
<a href="/storms/new">New Season</a>
<h1>All Storms</h1>

<% @storms.each do |storm| %>
  <h3><a href='storms/<%= storm.id %>'><%= "#{storm[:storm_type]} #{storm[:name]}"%></a></h3>
  <p> Peak winds: <%= storm[:wind_spd] %> </p>
  <% if storm.landfall == true %>
    <p><%= "#{storm[:storm_type]} #{storm[:name]} made landfall" %></p>
    <% else %>
    <p><%= "#{storm[:storm_type]} #{storm[:name]} did not make landfall" %></p>
  <% end %>
<% end %>